            </intent-filter>
        </activity>
        <activity
            android:name="la.droid.qr.services.Encode"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/encode" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name="la.droid.qr.services.Decode"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/decode" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name="ilproject.Waiter"
            android:label="@string/title_activity_waiter" >
        </activity>
    </application>

    <uses-sdk android:minSdkVersion="5" />

</manifest>